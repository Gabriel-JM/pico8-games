-- draw

function draw_start()
	cls()
	print(
		"press ❎ to start",
		20,
		30
	)
end

function draw_game()
	cls()
	map()
	
	print(debug)
	
	palt(0,false)
	spr(
		plyr.spr+((frames/30)%2),
		plyr.x,
		plyr.y,
		1,
		1,
		plyr.flip,
		nil
	)
	palt()
	print(
		"map x:"..plyr.map_x..
		" y:"..plyr.map_y,
		60,
		10,
		8
	)
	rect(
		plyr.map_x*8,
		plyr.map_y*8,
		plyr.map_x*8+1,
		plyr.map_y*8+1,
		8
	)
end
