-- draw

function draw_start()
	cls()
	print(
		"press ❎ to start",
		20,
		30
	)
end

function draw_game()
	cls()
	map()
	palt(0,false)
	spr(
		plyr.spr+((frames/30)%2),
		plyr.x,
		plyr.y,
		1,
		1,
		plyr.flip,
		nil
	)
	palt()
	print(
		"map x:"..plyr.map_x..
		" y:"..plyr.map_y,
		60,
		10,
		8
	)
end
