-- updates

function update_start()
	if btnp(❎) then
		_upd=update_game
		_drw=draw_game
	end
end

function update_game()
	local speed=plyr.speed
	
	if frames>3000 then
		frames=-1
	end
	
	frames+=1
	
	if btnp(➡️) then
		plyr.x+=speed
		plyr.flip=false
		plyr.map_x=flr(plyr.x/8)
	end
	if btnp(⬅️) then
		plyr.x-=speed
		plyr.flip=true
		plyr.map_x=flr(plyr.x/8)
	end
	if btnp(⬆️) then
		plyr.y-=speed
		plyr.map_y=flr(plyr.y/8)
	end
	if btnp(⬇️) then
		plyr.y+=speed
		plyr.map_y=flr(plyr.y/8)
	end
	
end
