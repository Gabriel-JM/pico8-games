version 34
__lua__
function _init()
	debug=nil
	_upd=update_game
	_drw=draw_game
	start_game()
end

function _update()
	_upd()
end

function _draw()
	_drw()
end

function start_game()
	frames=0
	plyr={
		x=10,
		y=10,
		w=8,
		h=8,
		map_x=1,
		map_y=1,
		speed=3,
		jump=0,
		in_ground=true,
		spr=1,
		flip=false,
		-- clock wise: 1 2 3 4
		walk_dir=2
	}
end
