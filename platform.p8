--	end

	debug=mget(
		(plyr.x+plyr.w/2)/8,
		(plyr.y+plyr.h/2)/8
	)
end

function verify_collision(
	tgt1,tgt2
)
	if (
		tgt1.x > tgt2.x+tgt2.w or
		tgt1.x+tgt1.w < tgt2.x or
		tgt1.y > tgt2.y+tgt2.h or
		tgt1.y+tgt1.h < tgt2.y
	) then
		return false
	end
	
	return true
end
