function _init()
	ship_x=64
	ship_y=64
	ship_sx=0
	ship_sy=0
	
	bullets={}
	
	stars={}
	for i=1,100 do
		add(stars,{
			x=flr(rnd(128)),
			y=flr(rnd(128)),
			spd=rnd(1.5)+0.5
		})
	end
end

function _draw()
	cls()
	
	create_starfield()
	
	spr(1,ship_x,ship_y)
	
	foreach(bullets,function(b)
		spr(2,b.x,b.y)
	end)
end

function _update()
	ship_sx,ship_sy=0,0
	
	if (btn(‚¨ÖÔ∏è)) ship_sx=-2
	if (btn(‚û°Ô∏è)) ship_sx=2
	if (btn(‚¨ÜÔ∏è)) ship_sy=-2
	if (btn(‚¨áÔ∏è)) ship_sy=2
	if btnp(üÖæÔ∏è) then
		add(
			bullets,
			{x=ship_x,y=ship_y-4}
		)
		sfx(0)
	end
	
	ship_x+=ship_sx
	ship_y+=ship_sy
	
	foreach(bullets,function(b)
		b.y-=4
	end)
	
	ship_x=mid(0,ship_x,127-8)
	ship_y=mid(0,ship_y,127-8)
	
	for i=#bullets,1,-1 do
		if bullets[i].y<0 then
			del(bullets,bullets[i])
		end
	end
	
	update_stars()
end
-->8
function create_starfield()
	foreach(stars,function(s)
		pset(
			s.x,
			s.y,
			get_star_col(s.spd)
		)
	end)
end

function get_star_col(spd)
	if spd<1 then
		return 1
	end
	
	if spd<1.5 then
		return 13
	end

	return 6
end

function update_stars()
	foreach(stars,function(s)
		s.y+=s.spd
		
		if s.y>127 then
			s.y=-1
		end
	end)
end
