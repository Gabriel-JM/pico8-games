function _init()
	ship_x=64
	ship_y=64
	ship_sx=0
	ship_sy=0
	ship_spr=2
	
	flame_spr=5
	
	bullets={}
	bullet_spr=16
	
	muzzle=0
end

function _draw()
	cls()
	spr(ship_spr,ship_x,ship_y)
	foreach(bullets,function(b)
		spr(bullet_spr,b.x,b.y)
	end)
	spr(flame_spr,ship_x,ship_y+8)
	print(#bullets)
	
	if muzzle>0 then
		circfill(
			ship_x+3,
			ship_y-2,
			muzzle,
			7
		)
	end
end

function _update()
	ship_sx,ship_sy,ship_spr=0,0,2
	
	if btn(‚¨ÖÔ∏è) then
		ship_sx=-2
		ship_spr=1
	end
	if (btn(‚û°Ô∏è)) then
		ship_sx=2
		ship_spr=3
	end
	if (btn(‚¨ÜÔ∏è)) ship_sy=-2
	if (btn(‚¨áÔ∏è)) ship_sy=2
	if btnp(üÖæÔ∏è) then
		add(
			bullets,
			{x=ship_x,y=ship_y-4}
		)
		sfx(0)
		muzzle=6
	end
	
	ship_x+=ship_sx
	ship_y+=ship_sy
	
	foreach(bullets,function(b)
		b.y-=4
		
		if b.y<0 then
			del(bullets,b)
		end
	end)
	
	flame_spr+=1
	
	if flame_spr>9 then
		flame_spr=5
	end
	
	muzzle=max(0,muzzle-1)
	
	ship_x=mid(0,ship_x,127-8)
	ship_y=mid(0,ship_y,127-8)
end
