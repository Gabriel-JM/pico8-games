pico-8 cartridge // http://www.pico-8.com
version 34
__lua__
function _init()
	x=64
	y=64
	sx=0
	sy=0
	speed=1
end

function _draw()
	cls()
	spr(1,x,y)
end

function _update()
	sx,sy=0,0
	
	if (btn(⬅️)) sx=-speed
	if (btn(➡️)) sx=speed
	if (btn(⬆️)) sy=-speed
	if (btn(⬇️)) sy=speed
	
	x+=sx
	y+=sy
	
	x=mid(0,x,127-8)
	y=mid(0,y,127-8)
end
