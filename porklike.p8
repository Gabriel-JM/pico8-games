-- draws

function draw_game()
	cls(0)
	map()
	
	draw_sprite(
		get_frame(player_sprite,4),
		player_x*8 + player_offset_x,
		player_y*8 + player_offset_y,
		10
	)
end

function draw_gameover()

end
-->8
-- tools

function get_frame(
	start_point,
	length
)
	return start_point+(
		flr(frame_time/8)%length
	)
end

function draw_sprite(
	sprite_num,
	x_position,
	y_position,
	color_num
)
	--makes black not transparent
	palt(0,false)
	
	--turn gray to another color
	pal(6,color_num)
	spr(
		sprite_num,
		x_position,
		y_position
	)
	pal()
end
