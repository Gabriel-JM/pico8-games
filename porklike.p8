-- draws

function draw_game()
	cls(0)
	map()
	
	draw_sprite(
		get_frame(player_sprite,4),
		player_x*8 + player_ox,
		player_y*8 + player_oy,
		10,
		player_is_flipped
	)
end

function draw_gameover()

end
