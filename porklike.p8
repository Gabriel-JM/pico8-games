-- draws

function draw_game()
	cls(0)
	map()
	
	draw_sprite(
		get_frame(player_sprite,4),
		player_x*8 + player_ox,
		player_y*8 + player_oy,
		10,
		player_is_flipped
	)
end

function draw_gameover()

end
-->8
-- tools

function get_frame(
	start_point,
	length
)
	return start_point+(
		flr(frame_time/15)%length
	)
end

function draw_sprite(
	sprite_num,
	x_position,
	y_position,
	color_num,
	is_flipped
)
	--makes black not transparent
	palt(0,false)
	
	--turn gray to another color
	pal(6,color_num)
	spr(
		sprite_num,
		x_position,
		y_position,
		1,1,
		is_flipped
	)
	pal()
end
-->8
-- gameplay

function move_player(dx,dy)
	local dest_x,dest_y=
		player_x+dx,player_y+dy
	local tile=mget(dest_x,dest_y)
	
	if dx<0 then
		player_is_flipped=true
	elseif dx>0 then
		player_is_flipped=false
	end
	
	if fget(tile,0) then
		-- wall
		player_sox,player_soy=dx*8,dy*8
		player_ox,player_oy=0,0
					
		player_animation=bump_animation
	else
		player_x+=dx
		player_y+=dy
				
		player_sox,player_soy=-dx*8,-dy*8
		player_ox,player_oy=
			player_sox,player_soy
		
		player_animation=walk_animation
	end
	
	player_timer=0
	update_func=update_player_turn
end
