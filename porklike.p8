__lua__
-- initialization

function _init()
	update_func=update_game
	draw_func=draw_game
	
	frame_time=0
	player_sprite=240
		
	startgame()
end

function _draw()
	draw_func()
end

function _update()
	frame_time+=1
	update_func()
end

function startgame()
	player_x=3
	player_y=6
	player_offset_x=0
	player_offset_y=0
end
-->8
-- updates

function update_game()
	if btnp(⬅️) then
		player_x-=1
		player_offset_x=8
		update_func=update_player_turn
	end
	if btnp(➡️) then
		player_x+=1
		player_offset_x=-8
		update_func=update_player_turn
	end
	if btnp(⬆️) then
		player_y-=1
		player_offset_y=8
		update_func=update_player_turn
	end
	if btnp(⬇️) then
		player_y+=1
		player_offset_y=-8
		update_func=update_player_turn
	end
end

function update_player_turn()
	if player_offset_x>0 then
		player_offset_x-=1
	end
	if player_offset_x<0 then
		player_offset_x+=1
	end
	if player_offset_y>0 then
		player_offset_y-=1
	end
	if player_offset_y<0 then
		player_offset_y+=1
	end
	
	if
		player_offset_x==0
		and player_offset_y==0
	then
		update_func=update_game
	end
end

function update_gameover()

end
